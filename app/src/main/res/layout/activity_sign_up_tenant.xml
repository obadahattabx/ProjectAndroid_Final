<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background_design"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SignUpTenant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/top_design">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Sign up asTenant"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textPersonName"
                android:paddingVertical="10sp"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingVertical="10sp"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="126dp"
                    android:layout_height="match_parent"
                    android:text="Gender"
                    android:textAlignment="gravity"
                    android:textColor="#ffff" />

                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:entries="@array/Gendertype"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <EditText
                android:id="@+id/password_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingVertical="10sp"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingVertical="10sp"
                android:textColorHint="#ffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:text="Nationality"
                    android:textColor="#ffff" />

                <Spinner
                    android:id="@+id/nationality"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:entries="@array/Nationalitytype"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <EditText
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Gross Monthly Salary"
                android:inputType="phone"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/occupation"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Occupation"
                android:inputType="textPersonName"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/familysize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Family Size"
                android:inputType="phone"
                android:textColorHint="#ffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="125dp"
                    android:layout_height="54dp"
                    android:text="Country"
                    android:textColor="#ffff" />

                <Spinner
                    android:id="@+id/CountryT"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:entries="@array/country_array1"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="126dp"
                    android:layout_height="match_parent"
                    android:text="City"
                    android:textColor="#ffff" />

                <Spinner
                    android:id="@+id/CityT"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginVertical="10sp"
                    android:entries="@array/country_array"
                    android:paddingVertical="10sp"
                    android:tag="Select City"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <EditText
                android:id="@+id/phone_signup"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginVertical="10sp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingVertical="10sp"
                android:textColorHint="#ffff" />

            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:background="@drawable/button_design"
                android:paddingVertical="10sp"
                android:text="Sign up"
                android:textColor="#F5F6FA" />

            <Button
                android:id="@+id/backlogin"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/button_design"
                android:text="Back to Log in"
                android:textColor="#F2FFFFFF" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>